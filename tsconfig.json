{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "target": "ES2021",
    "sourceMap": false,
    "outDir": "./dist",
    "rootDir": "./lib",
    "paths": {
      "@/*": ["./lib/*"]
    },
    "skipLibCheck": true
  },
  "include": ["lib/**/*"],
  "exclude": ["node_modules"]
}